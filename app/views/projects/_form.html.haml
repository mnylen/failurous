-semantic_form_for(@project) do |f|
  -f.inputs do
    =f.input :name
    
    -unless @project.new_record?
      =f.input :api_key, :label => "API key", :as => :string, :input_html => {:readonly => true, :class => 'readonly'}

  -f.buttons do
    =f.commit_button :input_html => {:class => 'positive'}