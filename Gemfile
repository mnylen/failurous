source 'http://rubygems.org'

gem 'rails', '3.1.1'
gem 'jquery-rails'
gem 'bson_ext'
gem 'mongo'
gem 'mongoid'
gem 'haml'
gem 'uuid'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.1.4'
  gem 'coffee-rails', '~> 3.1.1'
  gem 'uglifier', '>= 1.0.3'
end

group :test, :development do
  gem 'rspec'
  gem 'rspec-rails'
end

group :test do
  gem 'spork', '~> 0.9.0.rc9'
end

group :development do
  gem 'thin'
end
